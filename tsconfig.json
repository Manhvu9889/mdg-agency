{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["node_modules", "public"]
}
